@model Usuario
@{
    ViewData["Title"] = "Perfil de Usuario";
}

<h2>Perfil de Usuario</h2>
<table class="table">
    <tr>
        <th>Nombre de Usuario</th>
        <th>@Model.NombreUsuario</th>
    </tr>
    <tr>
        <th>Correo de Usuario</th>
        <th>@Model.Correo</th>
    </tr>
    <tr>
        <th>Nombre</th>
        <th>@Model.Nombre</th>
    </tr>
    <tr>
        <th>Telefono</th>
        <th>@Model.Telefono</th>
    </tr>
</table>

<h3>Direcciones</h3>
@if (Model.Direccion.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Direccion</th>
                <th>Cuidad</th>
                <th>Estado</th>
                <th>Codigo de Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var direccion in Model.Direcciones)
            {
                <tr>
                    <td>@direccion.Address</td>
                    <td>@direccion.Cuidad</td>
                    <td>@direccion.Estado</td>
                    <td>@direccion.CodigoPostal</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay Direccion Disponibles.</p>
}

<a asp-action="AgregarDireccion" class="btn btn-primary" asp-route-id="@Model.UsuarioId">Agregar Direccion</a>